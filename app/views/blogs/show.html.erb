  <section class="single-blog">
    <h2 class="single-blog__heading">Blog</h2>
    <section class="single-blog__box">
      <h3 class="single-blog__box-heading">
        <!-- title部分 下で変更します -->
        <%= @blog.title %>
        <!-- title部分 ここまで -->
      </h3>
      <div class="single-blog__box-content">
        <p class="single-blog__box-category">
          <!-- category部分 下で変更します -->
          <%= @blog.category %>
          <!-- category部分 ここまで -->
        </p>
        <p class="single-blog__box-date">
          <!-- created_at部分 下で変更します -->
          <%= @blog.created_at %>
          <!-- created_at部分 ここまで -->
        </p>
        <p class="single-blog__box-favorite favorite-<%= @blog.id %>">
          <%= render "favorites/list_favorite", blog: @blog %>
        </p>
      </div>
      <%= attachment_image_tag @blog, :image, class:"single-blog__box-image", fallback: "img/no_image_square.jpg" %>
      <p class="single-blog__box-text">
        <!-- body部分 下で変更します -->
        <%= @blog.body %>
        <!-- body部分 ここまで -->
      </p>
      <% if current_user == @blog.user %>
        <%= link_to "編集", edit_blog_path(@blog) %>
        <%= link_to "削除", blog_path(@blog), method: :delete  %>
      <% end %>
      <div class="single-blog__box-author-case">
        <div class="single-blog__box-author-image">
          <%= attachment_image_tag @blog.user, :profile_image, format: "jpeg", fallback: "img/no_image_square.jpg", size: "110x110" %>
        </div>
        <div class="single-blog__box-author-box">
          <p class="single-blog__box-author-name">
            By <%= link_to "#{@blog.user.name}", user_path(@user) %>
          </p>
          <p class="single-blog__box-author-text">
            <%= @blog.user.introduction %>
          </p>
        </div>
      </div>
      <div class="single-blog__blogcomments">
        <%= render "blogcomments/list_blogcomment", blog: @blog, blogcomment: @blogcomment %>
      </div>
    </section>
  </section>
